{
  "crons": [
    {
      "path": "/api/pulse/comprehensive-scanner?type=all",
      "schedule": "0 */6 * * *"
    },
    {
      "path": "/api/pulse/comprehensive-scanner?type=lightning",
      "schedule": "*/15 * * * *"
    },
    {
      "path": "/api/pulse/comprehensive-scanner?type=warehouse",
      "schedule": "0 */12 * * *"
    },
    {
      "path": "/api/pulse/amazon-deals-refresh",
      "schedule": "*/30 * * * *"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
