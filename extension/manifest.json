{
  "manifest_version": 3,
  "name": "Profit Orbit - Crosslisting Assistant",
  "version": "3.0.3",
  "description": "Automate crosslisting on Mercari, Facebook, Poshmark, eBay, and more",
  "permissions": [
    "storage",
    "cookies",
    "tabs",
    "windows",
    "scripting",
    "webRequest",
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess",
    "offscreen"
  ],
  "host_permissions": [
    "https://www.mercari.com/*",
    "https://mercari.com/*",
    "https://*.mercari.com/*",
    "https://*.supabase.co/*",
    "https://base44.app/*",
    "https://*.base44.app/*",
    "https://www.facebook.com/*",
    "https://m.facebook.com/*",
    "https://upload.facebook.com/*",
    "https://rupload.facebook.com/*",
    "https://graph.facebook.com/*",
    "https://*.fbcdn.net/*",
    "https://www.poshmark.com/*",
    "https://www.ebay.com/*",
    "https://www.etsy.com/*",
    "https://profitorbit.io/*",
    "https://*.vercel.app/*",
    "http://localhost:5173/*",
    "http://localhost:5174/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.mercari.com/*",
        "https://www.facebook.com/*",
        "https://www.poshmark.com/*",
        "https://www.ebay.com/*",
        "https://www.etsy.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://profitorbit.io/*",
        "https://*.vercel.app/*",
        "http://localhost:5173/*",
        "http://localhost:5174/*"
      ],
      "js": [
        "profit-orbit-page-api.js"
      ],
      "run_at": "document_start",
      "world": "MAIN"
    },
    {
      "matches": [
        "https://profitorbit.io/*",
        "https://*.vercel.app/*",
        "http://localhost:5173/*",
        "http://localhost:5174/*"
      ],
      "js": [
        "profit-orbit-bridge.js"
      ],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "profit-orbit-page-api.js",
        "facebook-scraper.js",
        "facebook-api.js",
        "mercari-api.js"
      ],
      "matches": [
        "https://profitorbit.io/*",
        "https://*.vercel.app/*",
        "https://www.facebook.com/*",
        "https://m.facebook.com/*",
        "http://localhost:5173/*",
        "http://localhost:5174/*"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "externally_connectable": {
    "matches": [
      "https://profitorbit.io/*",
      "https://*.vercel.app/*",
      "http://localhost:5173/*",
      "http://localhost:5174/*"
    ]
  }
}